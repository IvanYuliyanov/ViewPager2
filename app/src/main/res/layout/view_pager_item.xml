<?xml version="1.0" encoding="utf-8"?>
<layout>
	<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingEnd="@dimen/padding_8dp"
		android:paddingStart="@dimen/padding_8dp">

		<TextView
			android:id="@+id/actor_name_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_32dp"
			android:fontFamily="sans-serif-condensed"
			android:textSize="@dimen/actor_name_text_size_22sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<androidx.cardview.widget.CardView
			android:id="@+id/actor_image_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/margin_8dp"
			app:cardCornerRadius="@dimen/actor_image_corner_radius_10dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/actor_name_text_view">

			<ImageView
				android:id="@+id/actor_image_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:scaleType="fitXY" />
		</androidx.cardview.widget.CardView>

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>